<%- include('partials/header', { page: 'editorial' }) %>

<main class="container">
  <article class="editorial-page">
    <header class="editorial-header">
      <div class="editorial-label">Weekly Editorial</div>
      <h1><%= editorial.title %></h1>
      <div class="editorial-meta">
        <span>Week of <%= editorial.week_start %></span>
        <% if (editorial.published_at) { %>
          <span>Â·</span>
          <span>Published <%= new Date(editorial.published_at).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %></span>
        <% } %>
      </div>
    </header>

    <div class="editorial-content">
      <%= editorial.content.split('\n\n').map(p => `<p>${p}</p>`).join('') %>
    </div>

    <footer class="editorial-footer">
      <div class="editorial-cta">
        <h3>Enjoyed this editorial?</h3>
        <p>Subscribe to get weekly insights delivered to your inbox every Monday.</p>
        <form action="/subscribe" method="POST" class="inline-subscribe">
          <input type="email" name="email" placeholder="your@email.com" required>
          <button type="submit">Subscribe</button>
        </form>
      </div>
    </footer>
  </article>
</main>

<%- include('partials/footer') %>
