                WhatsApp
              </a>
              <a href="https://twitter.com/intent/tweet?text=<%= encodeURIComponent(article.title) %>&url=<%= encodeURIComponent('https://' + (typeof req !== 'undefined' && req.get ? req.get('host') : 'aicreditnews.com') + '/article/' + article.id) %>" target="_blank" rel="noopener" class="share-option" data-platform="twitter">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="#000"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                X / Twitter
              </a>
              <a href="https://www.linkedin.com/sharing/share-offsite/?url=<%= encodeURIComponent('https://' + (typeof req !== 'undefined' && req.get ? req.get('host') : 'aicreditnews.com') + '/article/' + article.id) %>" target="_blank" rel="noopener" class="share-option" data-platform="linkedin">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="#0A66C2"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                LinkedIn
              </a>
              <a href="mailto:?subject=<%= encodeURIComponent(article.title + ' - AI Credit News') %>&body=<%= encodeURIComponent('I thought you might find this interesting:\n\n' + article.title + '\n\nhttps://' + (typeof req !== 'undefined' && req.get ? req.get('host') : 'aicreditnews.com') + '/article/' + article.id) %>" class="share-option" data-platform="email">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
                Email
              </a>
              <button class="share-option" data-platform="copy" onclick="copyArticleLink()">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg>
                <span class="copy-text">Copy link</span>
              </button>
            </div>
          </div>
        </div>
      </div>

      <h1><%= article.title %></h1>

      <div class="article-meta">
        <span><strong data-i18n="source">Source</strong>: <%= article.source %></span>
        <% if (article.author) { %>
          <span><strong>By:</strong> <%= article.author %></span>
        <% } %>
        <span><strong data-i18n="publishedOn">Published on</strong>: <%= article.published_date ? new Date(article.published_date).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) : 'Recent' %></span>
        <% if (article.difficulty_level) { %>
          <span><strong data-i18n="difficulty">Difficulty</strong>: <span class="difficulty-badge <%= article.difficulty_level %>" data-difficulty="<%= article.difficulty_level %>"><%= article.difficulty_level %></span></span>
        <% } %>
      </div>

      <% if (article.tags && article.tags.length > 0) { %>
        <div class="tags">
          <strong data-i18n="tags">Tags</strong>:
          <% article.tags.forEach(tag => { %>
            <a href="/search?q=<%= encodeURIComponent(tag.name) %>" class="tag"><%= tag.name %></a>
          <% }) %>
        </div>
      <% } %>
    </header>

    <% if (article.summary && article.summary !== article.content) { %>
      <div style="background: var(--background); padding: 1.5rem; border-radius: var(--radius); margin-bottom: 2rem; border-left: 4px solid var(--accent);">
        <strong style="display: block; margin-bottom: 0.5rem; color: var(--accent);">Summary</strong>
        <p style="margin: 0; font-size: 1.05rem;"><%= article.summary %></p>
      </div>
    <% } %>

    <div class="article-content">
      <% if (article.content) { %>
        <%- article.content.replace(/\n/g, '</p><p>') %>
      <% } else { %>
        <p data-i18n="noResultsFor">Full content not available. Click below to read the original article.</p>
      <% } %>
    </div>

    <a href="<%= article.url %>" target="_blank" rel="noopener noreferrer" class="read-original">
      <span data-i18n="readOriginal">Read Original Article</span> &rarr;
    </a>

    <!-- Article Feedback -->
    <div class="article-feedback-section" data-article-id="<%= article.id %>">
      <span class="feedback-question">Was this article helpful?</span>
      <div class="feedback-btns">
        <button class="feedback-btn" data-helpful="true">Yes 路 <span class="count"><%= article.helpful_count || 0 %></span></button>
        <button class="feedback-btn" data-helpful="false">No 路 <span class="count"><%= article.not_helpful_count || 0 %></span></button>
      </div>
    </div>
  </article>

  <!-- Comments Section -->
  <section class="comments-section">
    <h2>Comments <span class="comment-count">(<%= typeof comments !== 'undefined' ? comments.length : 0 %>)</span></h2>

    <% if (typeof user !== 'undefined' && user) { %>
    <form class="comment-form" data-article-id="<%= article.id %>">
      <textarea name="content" placeholder="Share your thoughts..." rows="3" required></textarea>
      <button type="submit" class="btn-comment-submit">Post Comment</button>
    </form>
    <% } else { %>
    <div class="comment-login-prompt">
      <p><a href="/auth/login?redirect=/article/<%= article.id %>">Sign in</a> to join the discussion</p>
    </div>
    <% } %>

    <div class="comments-list">
      <% if (typeof comments !== 'undefined' && comments.length > 0) { %>
        <% comments.forEach(comment => { %>
        <div class="comment" data-comment-id="<%= comment.id %>">
          <div class="comment-header">
            <span class="comment-avatar"><%= comment.user_name ? comment.user_name.charAt(0).toUpperCase() : 'U' %></span>
            <span class="comment-author"><%= comment.user_name || 'Anonymous' %></span>
            <span class="comment-date"><%= new Date(comment.created_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></span>
          </div>
          <div class="comment-content"><%= comment.content %></div>
        </div>
        <% }) %>
      <% } else { %>
        <p class="no-comments">No comments yet. Be the first to share your thoughts!</p>
      <% } %>
    </div>
  </section>

  <% if (relatedArticles && relatedArticles.length > 0) { %>
    <section class="section" style="margin-top: 4rem;">
      <div class="section-header">
        <h2 data-i18n="relatedArticles">Related Articles</h2>
      </div>
      <div class="articles-grid">
        <% relatedArticles.forEach(article => { %>
          <%- include('partials/article-card', { article }) %>
        <% }) %>
      </div>
    </section>
  <% } %>
</main>

<%- include('partials/footer') %>

<script>
// Save/Bookmark functionality
const saveBtn = document.querySelector('.save-btn');
if (saveBtn) {
  saveBtn.addEventListener('click', async () => {
    const articleId = saveBtn.dataset.articleId;
    const isSaved = saveBtn.classList.contains('saved');

    try {
      const res = await fetch(`/api/articles/${articleId}/${isSaved ? 'unsave' : 'save'}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      });

      if (res.ok) {
        saveBtn.classList.toggle('saved');
        const svg = saveBtn.querySelector('svg');
        const span = saveBtn.querySelector('span');
        if (saveBtn.classList.contains('saved')) {
          svg.setAttribute('fill', 'currentColor');
          span.textContent = 'Saved';
          saveBtn.title = 'Remove from saved';
        } else {
          svg.setAttribute('fill', 'none');
          span.textContent = 'Save';
          saveBtn.title = 'Save article';
        }
      }
    } catch (err) {
      console.error('Save error:', err);
    }
  });
}

// Feedback functionality
const feedbackSection = document.querySelector('.article-feedback-section');
if (feedbackSection) {
  const articleId = feedbackSection.dataset.articleId;
  feedbackSection.querySelectorAll('.feedback-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const isHelpful = btn.dataset.helpful === 'true';
      try {
        const res = await fetch(`/api/articles/${articleId}/feedback`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ helpful: isHelpful })
        });
        if (res.ok) {
          const data = await res.json();
          const btns = feedbackSection.querySelectorAll('.feedback-btn');
          btns[0].innerHTML = 'Yes 路 <span class="count">' + data.helpful + '</span>';
          btns[1].innerHTML = 'No 路 <span class="count">' + data.not_helpful + '</span>';
          btn.classList.add('active');
        }
      } catch (err) {
        console.error('Feedback error:', err);
      }
    });
  });
}

// Comment functionality
const commentForm = document.querySelector('.comment-form');
if (commentForm) {
  commentForm.addEventListener('submit', async (e) => {
    e.preventDefault();
    const articleId = commentForm.dataset.articleId;
    const content = commentForm.querySelector('textarea').value.trim();

    if (!content) return;

    try {
      const res = await fetch(`/api/articles/${articleId}/comments`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ content })
      });

      if (res.ok) {
        const comment = await res.json();
        // Add comment to list
        const commentsList = document.querySelector('.comments-list');
        const noComments = commentsList.querySelector('.no-comments');
        if (noComments) noComments.remove();

        const commentEl = document.createElement('div');
        commentEl.className = 'comment';
        commentEl.innerHTML = `
          <div class="comment-header">
            <span class="comment-avatar">${comment.user_name ? comment.user_name.charAt(0).toUpperCase() : 'U'}</span>
            <span class="comment-author">${comment.user_name || 'You'}</span>
            <span class="comment-date">Just now</span>
          </div>
          <div class="comment-content">${comment.content}</div>
        `;
        commentsList.insertBefore(commentEl, commentsList.firstChild);

        // Update count
        const countEl = document.querySelector('.comment-count');
        const currentCount = parseInt(countEl.textContent.match(/\d+/)[0]) || 0;
        countEl.textContent = `(${currentCount + 1})`;

        // Clear form
        commentForm.querySelector('textarea').value = '';
      }
    } catch (err) {
      console.error('Comment error:', err);
    }
  });
}

// Share dropdown toggle
const shareBtn = document.querySelector('.share-btn');
const shareMenu = document.querySelector('.share-menu');
if (shareBtn && shareMenu) {
  shareBtn.addEventListener('click', (e) => {
    e.stopPropagation();
    shareMenu.classList.toggle('open');
  });

  // Close menu when clicking outside
  document.addEventListener('click', () => {
    shareMenu.classList.remove('open');
  });

  shareMenu.addEventListener('click', (e) => {
    e.stopPropagation();
  });
}

// Copy link functionality
function copyArticleLink() {
  const url = window.location.href;
  navigator.clipboard.writeText(url).then(() => {
    const copyText = document.querySelector('.copy-text');
    copyText.textContent = 'Copied!';
    setTimeout(() => {
      copyText.textContent = 'Copy link';
    }, 2000);
  });
}
</script>
