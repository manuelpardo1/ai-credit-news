<%- include('partials/header', { page: 'home', activeCategory: 'all', categories: categories }) %>

<%
// Get featured article (first one)
const featuredArticle = articles && articles.length > 0 ? articles[0] : null;
// Get remaining articles for the list
const listArticles = articles && articles.length > 1 ? articles.slice(1, 7) : [];
%>

<!-- Split Hero Section -->
<section class="split-hero">
  <div class="article-panel">
    <% if (featuredArticle) { %>
    <div class="article-cat">
      <span class="cat-dot"></span>
      <%= featuredArticle.category_name || 'News' %>
    </div>
    <h1><a href="/article/<%= featuredArticle.id %>"><%= featuredArticle.title %></a></h1>
    <p class="article-summary"><%= featuredArticle.summary %></p>
    <div class="article-meta-row">
      <span><%= featuredArticle.reading_time || '5' %> min read</span>
      <span><%= featuredArticle.view_count || 0 %> views</span>
      <span><%= new Date(featuredArticle.published_date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %></span>
    </div>
    <div class="article-actions">
      <a href="/article/<%= featuredArticle.id %>" class="btn-primary">Read Full Article</a>
      <div class="article-feedback" data-article-id="<%= featuredArticle.id %>">
        <span class="feedback-label">Helpful?</span>
        <div class="feedback-btns">
          <button class="feedback-btn" data-helpful="true">Yes · <span class="count"><%= featuredArticle.helpful_count || 0 %></span></button>
          <button class="feedback-btn" data-helpful="false">No · <span class="count"><%= featuredArticle.not_helpful_count || 0 %></span></button>
        </div>
      </div>
    </div>
    <% } else { %>
    <div class="article-cat">
      <span class="cat-dot"></span>
      Latest
    </div>
    <h1>AI Credit News</h1>
    <p class="article-summary">AI-powered insights for credit & financial services. Curated news on AI in credit scoring, lending, fraud detection, and banking.</p>
    <% } %>
  </div>

  <div class="editorial-panel">
    <% if (editorial) { %>
    <div class="editorial-badge">Weekly Editorial</div>
    <div class="editorial-content">
      <h2><%= editorial.title %></h2>
      <p><%= editorial.content ? editorial.content.substring(0, 150) + '...' : '' %></p>
    </div>
    <a href="/editorial/<%= editorial.id %>" class="btn-editorial">Read Editorial</a>
    <% } else { %>
    <div class="editorial-badge">Weekly Editorial</div>
    <div class="editorial-content">
      <h2>Coming Soon</h2>
      <p>Our weekly editorial will provide in-depth analysis of the most important AI trends in credit and banking.</p>
    </div>
    <% } %>
  </div>
</section>

<!-- Main Content Grid -->
<div class="main-grid">
  <div class="content-area">
    <!-- Most Read This Week -->
    <% if (typeof trending !== 'undefined' && trending && trending.length > 0) { %>
    <div class="section-header">
      <h2>Most Read This Week</h2>
      <a href="/all">View all</a>
    </div>
    <div class="trending-row">
      <% trending.slice(0, 3).forEach((article, index) => { %>
      <div class="trending-item">
        <span class="trending-rank"><%= index + 1 %></span>
        <div>
          <h4><a href="/article/<%= article.id %>"><%= article.title %></a></h4>
          <p class="trending-meta"><%= article.view_count || article.recent_views || 0 %> views · <%= article.category_name || 'News' %></p>
        </div>
      </div>
      <% }) %>
    </div>
    <% } %>

    <!-- Latest Articles -->
    <div class="section-header">
      <h2>Latest Articles</h2>
      <a href="/all">View all</a>
    </div>

    <div class="articles-list">
      <% if (listArticles.length > 0) { %>
        <% listArticles.forEach((article, index) => { %>
        <article class="article-item">
          <span class="article-num"><%= String(index + 1).padStart(2, '0') %></span>
          <div>
            <div class="article-item-cat"><%= article.category_name || 'News' %></div>
            <h4><a href="/article/<%= article.id %>"><%= article.title %></a></h4>
            <p><%= article.summary ? article.summary.substring(0, 120) + '...' : '' %></p>
            <div class="article-item-footer">
              <span class="article-item-meta"><%= article.reading_time || '5' %> min · <%= article.view_count || 0 %> views</span>
              <div class="feedback-btns-mini" data-article-id="<%= article.id %>">
                <button class="feedback-btn-mini" data-helpful="true">Yes · <%= article.helpful_count || 0 %></button>
                <button class="feedback-btn-mini" data-helpful="false">No · <%= article.not_helpful_count || 0 %></button>
              </div>
            </div>
          </div>
        </article>
        <% }) %>
      <% } else if (!featuredArticle) { %>
        <div class="empty-state">
          <h3>No articles yet</h3>
          <p>Check back soon for the latest AI in credit & banking news.</p>
        </div>
      <% } %>
    </div>

    <div class="view-more">
      <a href="/all" data-i18n="viewAll">View All Articles</a>
    </div>
  </div>

  <aside class="sidebar">
    <!-- Platform Stats -->
    <div class="sidebar-section">
      <div class="sidebar-title">Platform Stats</div>
      <div class="stats-grid">
        <div class="stat-item">
          <div class="stat-num"><%= typeof stats !== 'undefined' && stats ? stats.total_articles : '0' %></div>
          <div class="stat-label">Articles</div>
        </div>
        <div class="stat-item">
          <div class="stat-num"><%= typeof stats !== 'undefined' && stats ? stats.source_count : '0' %></div>
          <div class="stat-label">Sources</div>
        </div>
        <div class="stat-item">
          <div class="stat-num"><%= typeof stats !== 'undefined' && stats ? (stats.total_reads > 1000 ? (stats.total_reads / 1000).toFixed(1) + 'K' : stats.total_reads) : '0' %></div>
          <div class="stat-label">Views</div>
        </div>
        <div class="stat-item">
          <div class="stat-num"><%= typeof stats !== 'undefined' && stats ? stats.community_members : '0' %></div>
          <div class="stat-label">Members</div>
        </div>
      </div>
      <a href="/analytics" class="stats-link">View full analytics</a>
    </div>

    <!-- Newsletter Subscribe -->
    <div class="sidebar-section">
      <div class="sidebar-title" data-i18n="newsletter">Newsletter</div>
      <div class="newsletter-form">
        <p data-i18n="newsletterText">Weekly AI credit insights delivered to your inbox.</p>
        <form action="/subscribe" method="POST">
          <input type="email" name="email" placeholder="your@email.com" data-i18n-placeholder="emailPlaceholder" required>
          <button type="submit" data-i18n="subscribe">Subscribe</button>
        </form>
      </div>
    </div>

    <!-- Join Community -->
    <div class="sidebar-section join-section">
      <div class="sidebar-title">Join Community</div>
      <p>Save articles and join discussions.</p>
      <div class="social-btns">
        <button class="social-btn" onclick="signInWithGoogle()">
          <svg viewBox="0 0 24 24"><path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/><path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/><path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/><path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/></svg>
          Continue with Google
        </button>
        <button class="social-btn" onclick="signInWithApple()">
          <svg viewBox="0 0 24 24"><path fill="currentColor" d="M17.05 20.28c-.98.95-2.05.8-3.08.35-1.09-.46-2.09-.48-3.24 0-1.44.62-2.2.44-3.06-.35C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"/></svg>
          Continue with Apple
        </button>
      </div>
      <% if (typeof user === 'undefined' || !user) { %>
      <p class="login-link">Already have an account? <a href="/auth/login">Sign in</a></p>
      <% } %>
    </div>
  </aside>
</div>

<%- include('partials/footer') %>

<script>
// Feedback handling
document.querySelectorAll('.article-feedback, .feedback-btns-mini').forEach(container => {
  const articleId = container.dataset.articleId;
  container.querySelectorAll('.feedback-btn, .feedback-btn-mini').forEach(btn => {
    btn.addEventListener('click', async () => {
      const isHelpful = btn.dataset.helpful === 'true';
      try {
        const res = await fetch('/api/articles/' + articleId + '/feedback', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ helpful: isHelpful })
        });
        if (res.ok) {
          const data = await res.json();
          // Update counts in UI
          const btns = container.querySelectorAll('.feedback-btn, .feedback-btn-mini');
          btns[0].innerHTML = 'Yes · ' + data.helpful;
          btns[1].innerHTML = 'No · ' + data.not_helpful;
          btn.classList.add('active');
        }
      } catch (err) {
        console.error('Feedback error:', err);
      }
    });
  });
});

// Placeholder for OAuth
function signInWithGoogle() {
  window.location.href = '/auth/login?provider=google';
}
function signInWithApple() {
  window.location.href = '/auth/login?provider=apple';
}
</script>
