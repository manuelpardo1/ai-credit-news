<%- include('partials/header', { title: 'Search: ' + query, query: query, categories: categories }) %>

<section class="search-header">
  <div class="container">
    <h1><span data-i18n="searchResults">Search Results</span>: "<span class="query"><%= query %></span>"</h1>
    <p style="color: var(--text-light);"><%= articles.length %> <span data-i18n="resultsFor">results for</span> "<%= query %>"</p>
  </div>
</section>

<main class="container">
  <% if (articles && articles.length > 0) { %>
    <div class="articles-grid">
      <% articles.forEach(article => { %>
        <%- include('partials/article-card', { article }) %>
      <% }) %>
    </div>
  <% } else { %>
    <div class="empty-state">
      <div class="empty-state-icon">ğŸ”</div>
      <h3><span data-i18n="noResultsFor">No results found for</span> "<%= query %>"</h3>
      <p data-i18n="tryDifferent">Try different keywords or browse categories.</p>
    </div>
  <% } %>
</main>

<%- include('partials/footer') %>
