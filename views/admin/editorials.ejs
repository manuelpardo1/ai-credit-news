<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - AI Credit News</title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    .admin-header {
      background: var(--primary);
      color: white;
      padding: 20px 0;
    }
    .admin-header .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .admin-header h1 {
      margin: 0;
      font-size: 20px;
    }
    .admin-nav a {
      color: white;
      text-decoration: none;
      margin-left: 20px;
      opacity: 0.8;
    }
    .admin-nav a:hover {
      opacity: 1;
    }
    .admin-content {
      padding: 40px 0;
    }
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 40px;
    }
    .stat-card {
      background: white;
      padding: 24px;
      border-radius: 12px;
      box-shadow: var(--shadow);
    }
    .stat-card h3 {
      color: var(--text-light);
      font-size: 14px;
      margin: 0 0 8px 0;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    .stat-card .value {
      font-size: 32px;
      font-weight: 700;
      color: var(--primary);
    }
    .section-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }
    .section-header h2 {
      margin: 0;
    }
    .btn {
      display: inline-block;
      padding: 10px 20px;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 500;
      font-size: 14px;
      cursor: pointer;
      border: none;
    }
    .btn-primary {
      background: var(--accent);
      color: white;
    }
    .btn-primary:hover {
      background: var(--primary);
    }
    .btn-secondary {
      background: var(--background);
      color: var(--text);
      border: 1px solid var(--border);
    }
    .btn-danger {
      background: #e53e3e;
      color: white;
    }
    .editorials-list {
      background: white;
      border-radius: 12px;
      box-shadow: var(--shadow);
      overflow: hidden;
    }
    .editorial-item {
      padding: 20px;
      border-bottom: 1px solid var(--border);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .editorial-item:last-child {
      border-bottom: none;
    }
    .editorial-info h3 {
      margin: 0 0 8px 0;
      font-size: 16px;
    }
    .editorial-info h3 a {
      color: var(--text);
      text-decoration: none;
    }
    .editorial-info h3 a:hover {
      color: var(--accent);
    }
    .editorial-meta {
      font-size: 13px;
      color: var(--text-light);
    }
    .status-badge {
      display: inline-block;
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 500;
    }
    .status-draft {
      background: #fef3c7;
      color: #92400e;
    }
    .status-published {
      background: #d1fae5;
      color: #065f46;
    }
    .editorial-actions {
      display: flex;
      gap: 10px;
    }
    .newsletter-logs {
      margin-top: 40px;
    }
    .logs-list {
      background: white;
      border-radius: 12px;
      box-shadow: var(--shadow);
    }
    .log-item {
      padding: 16px 20px;
      border-bottom: 1px solid var(--border);
      display: flex;
      justify-content: space-between;
      font-size: 14px;
    }
    .log-item:last-child {
      border-bottom: none;
    }
    .message {
      background: #d1fae5;
      color: #065f46;
      padding: 12px 20px;
      border-radius: 8px;
      margin-bottom: 20px;
    }
    .empty-state {
      padding: 40px;
      text-align: center;
      color: var(--text-light);
    }
    .action-buttons {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
    }
  </style>
</head>
<body>
  <header class="admin-header">
    <div class="container">
      <h1>AI Credit News Admin</h1>
      <nav class="admin-nav">
        <a href="/">View Site</a>
        <a href="/admin/subscribers">Subscribers</a>
        <a href="/admin/brand-guide">Brand Guide</a>
        <a href="/admin/logout">Logout</a>
      </nav>
    </div>
  </header>

  <main class="admin-content">
    <div class="container">
      <% if (typeof message !== 'undefined' && message) { %>
        <div class="message"><%= message %></div>
      <% } %>

      <!-- Stats -->
      <div class="stats-grid">
        <div class="stat-card">
          <h3>Active Subscribers</h3>
          <div class="value"><%= subscriberCount %></div>
        </div>
        <div class="stat-card">
          <h3>Total Editorials</h3>
          <div class="value"><%= editorials.length %></div>
        </div>
        <div class="stat-card">
          <h3>Published</h3>
          <div class="value"><%= editorials.filter(e => e.status === 'published').length %></div>
        </div>
        <div class="stat-card">
          <h3>Drafts</h3>
          <div class="value"><%= editorials.filter(e => e.status === 'draft').length %></div>
        </div>
      </div>

      <!-- Actions -->
      <div class="section-header">
        <h2>Editorials</h2>
        <div class="action-buttons">
          <form method="POST" action="/admin/editorial/generate" style="display: inline;">
            <button type="submit" class="btn btn-primary">Generate New Editorial</button>
          </form>
          <form method="POST" action="/admin/editorial/welcome" style="display: inline;">
            <button type="submit" class="btn btn-secondary">Create Welcome Editorial</button>
          </form>
        </div>
      </div>

      <!-- Editorials List -->
      <div class="editorials-list">
        <% if (editorials.length === 0) { %>
          <div class="empty-state">
            <p>No editorials yet. Generate your first editorial!</p>
          </div>
        <% } else { %>
          <% editorials.forEach(editorial => { %>
            <div class="editorial-item">
              <div class="editorial-info">
                <h3><a href="/admin/editorial/<%= editorial.id %>"><%= editorial.title %></a></h3>
                <div class="editorial-meta">
                  <span class="status-badge status-<%= editorial.status %>"><%= editorial.status %></span>
                  &nbsp;·&nbsp;
                  Week of <%= editorial.week_start %>
                  <% if (editorial.published_at) { %>
                    &nbsp;·&nbsp;Published <%= new Date(editorial.published_at).toLocaleDateString() %>
                  <% } %>
                </div>
              </div>
              <div class="editorial-actions">
                <a href="/admin/editorial/<%= editorial.id %>" class="btn btn-secondary">Edit</a>
                <% if (editorial.status === 'draft') { %>
                  <form method="POST" action="/admin/editorial/<%= editorial.id %>/publish" style="display: inline;">
                    <button type="submit" class="btn btn-primary">Publish</button>
                  </form>
                <% } %>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>

      <!-- Newsletter Actions -->
      <div class="newsletter-logs">
        <div class="section-header">
          <h2>Newsletter</h2>
          <div class="action-buttons">
            <form method="POST" action="/admin/newsletter/send" style="display: inline;">
              <button type="submit" class="btn btn-primary" onclick="return confirm('Send weekly newsletter to all subscribers?')">
                Send Weekly Newsletter
              </button>
            </form>
            <form method="POST" action="/admin/newsletter/extraordinary" style="display: inline;">
              <button type="submit" class="btn btn-secondary" onclick="return confirm('Send extraordinary newsletter to all subscribers?')">
                Send Extraordinary
              </button>
            </form>
          </div>
        </div>

        <div class="logs-list">
          <% if (newsletterLogs.length === 0) { %>
            <div class="empty-state">
              <p>No newsletters sent yet.</p>
            </div>
          <% } else { %>
            <% newsletterLogs.forEach(log => { %>
              <div class="log-item">
                <span>
                  <strong><%= log.type %></strong>
                  <% if (log.editorial_title) { %>
                    - <%= log.editorial_title %>
                  <% } %>
                </span>
                <span>
                  <%= log.recipient_count %> recipients
                  &nbsp;·&nbsp;
                  <%= new Date(log.sent_at).toLocaleString() %>
                </span>
              </div>
            <% }) %>
          <% } %>
        </div>
      </div>
    </div>
  </main>
</body>
</html>
