<%- include('./partials/header', { title: 'Subscribers' }) %>

<style>
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }
  .stat-badge {
    background: var(--accent);
    color: white;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 14px;
  }
  .subscribers-table {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow);
    overflow: hidden;
  }
  table {
    width: 100%;
    border-collapse: collapse;
  }
  th, td {
    padding: 16px 20px;
    text-align: left;
    border-bottom: 1px solid var(--border);
  }
  th {
    background: var(--background);
    font-weight: 600;
    font-size: 14px;
    color: var(--text-light);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  tr:last-child td {
    border-bottom: none;
  }
  .status-active {
    color: #38a169;
  }
  .status-inactive {
    color: #e53e3e;
  }
  .empty-state {
    padding: 60px 40px;
    text-align: center;
    color: var(--text-light);
  }
</style>

<div class="admin-content">
  <div class="section-header">
    <h2>Subscribers</h2>
    <span class="stat-badge"><%= activeCount %> active subscribers</span>
  </div>

  <div class="subscribers-table">
    <% if (subscribers.length === 0) { %>
      <div class="empty-state">
        <p>No subscribers yet.</p>
      </div>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>Email</th>
            <th>Name</th>
            <th>Subscribed</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% subscribers.forEach(sub => { %>
            <tr>
              <td><%= sub.email %></td>
              <td><%= sub.name || '-' %></td>
              <td><%= new Date(sub.subscribed_at).toLocaleDateString() %></td>
              <td>
                <% if (sub.active) { %>
                  <span class="status-active">Active</span>
                <% } else { %>
                  <span class="status-inactive">Unsubscribed</span>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</div>

<%- include('./partials/footer') %>
