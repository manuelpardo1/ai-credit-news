<%- include('./partials/header', { title: 'Content Settings - Admin' }) %>

<div class="admin-content">
  <div class="admin-header">
    <h1>Content Settings</h1>
    <p class="subtitle">Configure article generation and scraping parameters</p>
  </div>

  <% if (message) { %>
  <div class="admin-message <%= message.includes('Error') ? 'error' : 'success' %>">
    <%= message %>
  </div>
  <% } %>

  <form action="/admin/settings" method="POST" class="settings-form">
    <!-- Daily Article Limits -->
    <div class="settings-section">
      <h2>Daily Article Limits</h2>
      <p class="section-desc">Control how many articles are published each day</p>

      <div class="settings-grid">
        <div class="form-group">
          <label for="daily_min_articles">
            Minimum Articles per Day
            <span class="help-text">Target minimum (will use AI to supplement if needed)</span>
          </label>
          <input type="number" id="daily_min_articles" name="daily_min_articles"
                 value="<%= settings.daily_min_articles %>" min="1" max="20" required>
        </div>

        <div class="form-group">
          <label for="daily_max_articles">
            Maximum Articles per Day
            <span class="help-text">Upper limit for daily content</span>
          </label>
          <input type="number" id="daily_max_articles" name="daily_max_articles"
                 value="<%= settings.daily_max_articles %>" min="1" max="50" required>
        </div>
      </div>
    </div>

    <!-- AI Article Limits -->
    <div class="settings-section">
      <h2>AI Article Limits</h2>
      <p class="section-desc">Control AI-generated content to maintain quality balance</p>

      <div class="settings-grid">
        <div class="form-group">
          <label for="daily_max_ai_articles">
            Maximum AI Articles per Day
            <span class="help-text">Hard cap on AI-generated articles (AI articles â‰¤ scraped articles)</span>
          </label>
          <input type="number" id="daily_max_ai_articles" name="daily_max_ai_articles"
                 value="<%= settings.daily_max_ai_articles %>" min="0" max="10" required>
        </div>

        <div class="form-group">
          <label for="auto_publish_hours">
            Auto-Publish After (hours)
            <span class="help-text">AI articles auto-publish if not reviewed within this time</span>
          </label>
          <input type="number" id="auto_publish_hours" name="auto_publish_hours"
                 value="<%= settings.auto_publish_hours %>" min="1" max="168" required>
        </div>
      </div>

      <div class="info-box">
        <strong>AI Balance Rule:</strong> The system ensures AI articles never exceed scraped articles.
        <br>Example: If 4 articles are scraped, max 3 AI articles can be generated (limited by both this setting and the balance rule).
      </div>
    </div>

    <!-- Category Balance -->
    <div class="settings-section">
      <h2>Category Balance</h2>
      <p class="section-desc">Ensure even distribution across categories</p>

      <div class="settings-grid">
        <div class="form-group">
          <label for="weekly_min_per_category">
            Minimum Articles per Category (Weekly)
            <span class="help-text">System prioritizes categories below this threshold</span>
          </label>
          <input type="number" id="weekly_min_per_category" name="weekly_min_per_category"
                 value="<%= settings.weekly_min_per_category %>" min="1" max="20" required>
        </div>
      </div>
    </div>

    <!-- Scraping Settings -->
    <div class="settings-section">
      <h2>Scraping Settings</h2>
      <p class="section-desc">Configure how RSS feeds are scraped</p>

      <div class="settings-grid">
        <div class="form-group">
          <label for="scrape_max_age_hours">
            Maximum Article Age (hours)
            <span class="help-text">Only scrape articles newer than this</span>
          </label>
          <input type="number" id="scrape_max_age_hours" name="scrape_max_age_hours"
                 value="<%= settings.scrape_max_age_hours %>" min="1" max="168" required>
        </div>

        <div class="form-group">
          <label for="articles_per_scrape">
            Articles per Scrape Run
            <span class="help-text">Max articles to process per scheduled scrape</span>
          </label>
          <input type="number" id="articles_per_scrape" name="articles_per_scrape"
                 value="<%= settings.articles_per_scrape %>" min="1" max="20" required>
        </div>
      </div>
    </div>

    <!-- Current Status -->
    <div class="settings-section status-section">
      <h2>Current Status</h2>
      <div class="status-grid">
        <div class="status-item">
          <span class="status-label">Today's Scraped</span>
          <span class="status-value"><%= stats.scraped %></span>
        </div>
        <div class="status-item">
          <span class="status-label">Today's AI Generated</span>
          <span class="status-value"><%= stats.aiGenerated %></span>
        </div>
        <div class="status-item">
          <span class="status-label">Total Today</span>
          <span class="status-value"><%= stats.scraped + stats.aiGenerated %></span>
        </div>
        <div class="status-item">
          <span class="status-label">Pending Review</span>
          <span class="status-value"><%= stats.pendingReview %></span>
        </div>
      </div>

      <h3>Category Balance (Last 7 Days)</h3>
      <div class="category-balance">
        <% categoryStats.forEach(cat => { %>
        <div class="category-stat <%= cat.recent_count < settings.weekly_min_per_category ? 'below-min' : '' %>">
          <span class="cat-name"><%= cat.name %></span>
          <div class="cat-bar-container">
            <div class="cat-bar" style="width: <%= Math.min(100, (cat.recent_count / settings.weekly_min_per_category) * 100) %>%"></div>
          </div>
          <span class="cat-count"><%= cat.recent_count %> / <%= settings.weekly_min_per_category %></span>
        </div>
        <% }); %>
      </div>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Save Settings</button>
      <a href="/admin" class="btn btn-secondary">Cancel</a>
    </div>
  </form>

  <!-- Operation Progress Dashboard -->
  <div id="operation-dashboard" class="settings-section dashboard-section" style="display: none;">
    <h2>Operation Progress</h2>
    <div class="dashboard-content">
      <div class="progress-header">
        <span id="operation-name" class="operation-name">Full Content Refresh</span>
        <span id="operation-status" class="status-badge running">Running</span>
      </div>

      <div class="progress-bar-container">
        <div id="progress-bar" class="progress-bar" style="width: 0%"></div>
      </div>
      <div class="progress-text">
        <span id="progress-percent">0%</span>
        <span id="current-step">Step 1 of 3: Scraping RSS Feeds</span>
      </div>

      <div class="stats-grid">
        <div class="stat-card" id="scraping-stats">
          <h4>Scraping</h4>
          <div class="stat-row"><span>Sources:</span> <span id="stat-sources">0 / 0</span></div>
          <div class="stat-row"><span>Current:</span> <span id="stat-current-source">-</span></div>
          <div class="stat-row"><span>Articles Found:</span> <span id="stat-found">0</span></div>
          <div class="stat-row"><span>Added:</span> <span id="stat-added" class="text-success">0</span></div>
          <div class="stat-row"><span>Skipped:</span> <span id="stat-skipped">0</span></div>
          <div class="stat-row"><span>Errors:</span> <span id="stat-errors" class="text-error">0</span></div>
        </div>

        <div class="stat-card" id="processing-stats">
          <h4>Processing</h4>
          <div class="stat-row"><span>Articles:</span> <span id="stat-processed">0 / 0</span></div>
          <div class="stat-row"><span>Current:</span> <span id="stat-current-article">-</span></div>
          <div class="stat-row"><span>Approved:</span> <span id="stat-approved" class="text-success">0</span></div>
          <div class="stat-row"><span>Rejected:</span> <span id="stat-rejected" class="text-error">0</span></div>
        </div>

        <div class="stat-card" id="ai-stats">
          <h4>AI Generation</h4>
          <div class="stat-row"><span>To Generate:</span> <span id="stat-ai-total">0</span></div>
          <div class="stat-row"><span>Generated:</span> <span id="stat-ai-generated" class="text-success">0</span></div>
          <div class="stat-row"><span>Category:</span> <span id="stat-ai-category">-</span></div>
        </div>
      </div>

      <div class="log-section">
        <h4>Activity Log</h4>
        <div id="activity-log" class="activity-log"></div>
      </div>
    </div>
  </div>

  <!-- Manual Operations -->
  <div class="settings-section operations-section">
    <h2>Manual Operations</h2>
    <p class="section-desc">Trigger content operations manually (useful for initial population)</p>

    <div class="operations-grid">
      <form action="/admin/scrape" method="POST" class="operation-form">
        <div class="operation-card">
          <h3>Scrape RSS Feeds</h3>
          <p>Fetch articles from all RSS sources (3 month lookback)</p>
          <button type="submit" class="btn btn-secondary" id="btn-scrape">Run Scrape</button>
        </div>
      </form>

      <form action="/admin/supplement" method="POST" class="operation-form">
        <div class="operation-card">
          <h3>AI Supplement</h3>
          <p>Generate AI articles to fill content gaps</p>
          <button type="submit" class="btn btn-secondary" id="btn-supplement">Run AI Supplement</button>
        </div>
      </form>

      <form action="/admin/full-refresh" method="POST" class="operation-form">
        <div class="operation-card highlight">
          <h3>Full Content Refresh</h3>
          <p>Scrape + Process + AI Supplement (takes a few minutes)</p>
          <button type="submit" class="btn btn-primary" id="btn-full-refresh">Run Full Refresh</button>
        </div>
      </form>
    </div>
  </div>
</div>

