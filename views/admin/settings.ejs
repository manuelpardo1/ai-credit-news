<script>
document.addEventListener('DOMContentLoaded', function() {
  const dashboard = document.getElementById('operation-dashboard');
  const operationForms = document.querySelectorAll('.operation-form');
  let pollingInterval = null;

  // Check URL for operation param (indicates we should start polling)
  const urlParams = new URLSearchParams(window.location.search);
  const activeOperation = urlParams.get('operation');

  if (activeOperation) {
    startPolling();
  }

  // Form submission handlers
  operationForms.forEach(form => {
    form.addEventListener('submit', function(e) {
      const btn = this.querySelector('button');
      btn.classList.add('loading');
      btn.disabled = true;

      // Disable all operation buttons
      document.querySelectorAll('.operation-form button').forEach(b => {
        b.disabled = true;
      });
    });
  });

  function startPolling() {
    dashboard.style.display = 'block';
    pollingInterval = setInterval(fetchProgress, 1000);
    fetchProgress(); // Immediate first fetch
  }

  function stopPolling() {
    if (pollingInterval) {
      clearInterval(pollingInterval);
      pollingInterval = null;
    }
    // Re-enable buttons
    document.querySelectorAll('.operation-form button').forEach(b => {
      b.disabled = false;
      b.classList.remove('loading');
    });
  }

  async function fetchProgress() {
    try {
      const res = await fetch('/admin/operation-progress');
      const data = await res.json();

      if (data.status === 'idle' || !data.operation) {
        stopPolling();
        return;
      }

      updateDashboard(data);

      if (data.status === 'completed' || data.status === 'error') {
        stopPolling();
        // Reload page after 3 seconds to show updated stats
        setTimeout(() => {
          window.location.href = '/admin/settings';
        }, 3000);
      }
    } catch (err) {
      console.error('Failed to fetch progress:', err);
    }
  }

  function updateDashboard(data) {
    // Operation name
    const opNames = {
      'scrape': 'Scrape RSS Feeds',
      'supplement': 'AI Supplement',
      'full-refresh': 'Full Content Refresh'
    };
    document.getElementById('operation-name').textContent = opNames[data.operation] || data.operation;

    // Status badge
    const statusBadge = document.getElementById('operation-status');
    statusBadge.textContent = data.status.charAt(0).toUpperCase() + data.status.slice(1);
    statusBadge.className = 'status-badge ' + data.status;

    // Progress bar
    document.getElementById('progress-bar').style.width = data.progress + '%';
    document.getElementById('progress-percent').textContent = data.progress + '%';

    // Current step (using data.currentStep, data.totalSteps, data.stepName)
    const stepNum = data.currentStep || 1;
    const totalSteps = data.totalSteps || 1;
    const stepName = data.stepName || 'Working...';
    document.getElementById('current-step').textContent =
      totalSteps > 1
        ? `Step ${stepNum} of ${totalSteps}: ${stepName}`
        : stepName;

    // Scraping stats (from data.stats)
    const stats = data.stats || {};
    document.getElementById('stat-sources').textContent =
      `${stats.sourcesProcessed || 0} / ${stats.totalSources || 0}`;
    document.getElementById('stat-current-source').textContent =
      stats.currentSource || '-';
    document.getElementById('stat-found').textContent = stats.articlesFound || 0;
    document.getElementById('stat-added').textContent = stats.articlesAdded || 0;
    document.getElementById('stat-skipped').textContent = stats.articlesSkipped || 0;
    document.getElementById('stat-errors').textContent = stats.sourceErrors || 0;

    // Processing stats
    document.getElementById('stat-processed').textContent =
      `${stats.articlesProcessed || 0} / ${stats.articlesToProcess || 0}`;
    document.getElementById('stat-current-article').textContent =
      stats.currentArticle || '-';
    document.getElementById('stat-approved').textContent = stats.articlesApproved || 0;
    document.getElementById('stat-rejected').textContent = stats.articlesRejected || 0;

    // AI stats
    document.getElementById('stat-ai-total').textContent = stats.aiArticlesToGenerate || 0;
    document.getElementById('stat-ai-generated').textContent = stats.aiArticlesGenerated || 0;
    document.getElementById('stat-ai-category').textContent = stats.aiCurrentCategory || '-';

    // Activity log (messages are objects with time and text properties)
    if (data.messages && data.messages.length > 0) {
      const logContainer = document.getElementById('activity-log');
      logContainer.innerHTML = data.messages.map(msg => {
        const text = typeof msg === 'string' ? msg : msg.text || '';
        const time = msg.time ? new Date(msg.time).toLocaleTimeString() : '';
        const isError = text.toLowerCase().includes('error') || text.toLowerCase().includes('failed');
        const isSuccess = text.toLowerCase().includes('approved') || text.toLowerCase().includes('added') || text.toLowerCase().includes('complete');
        const entryClass = isError ? 'error' : (isSuccess ? 'success' : '');
        return `<div class="log-entry ${entryClass}"><span class="timestamp">[${time}]</span> ${text}</div>`;
      }).join('');
      logContainer.scrollTop = logContainer.scrollHeight;
    }

    // Dashboard section styling based on status
    dashboard.classList.remove('error', 'completed');
    if (data.status === 'error') {
      dashboard.classList.add('error');
    } else if (data.status === 'completed') {
      dashboard.classList.add('completed');
    }
  }
});
</script>

