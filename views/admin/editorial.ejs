<%- include('./partials/header', { title: 'Edit Editorial' }) %>

<style>
  .breadcrumb {
    margin-bottom: 20px;
  }
  .breadcrumb a {
    color: var(--text-light);
    text-decoration: none;
  }
  .breadcrumb a:hover {
    color: var(--accent);
  }
  .edit-form {
    background: white;
    border-radius: 12px;
    box-shadow: var(--shadow);
    padding: 30px;
  }
  .form-group {
    margin-bottom: 24px;
  }
  .form-group label {
    display: block;
    font-weight: 600;
    margin-bottom: 8px;
    color: var(--text);
  }
  .form-group input[type="text"] {
    width: 100%;
    padding: 12px 16px;
    border: 2px solid var(--border);
    border-radius: 8px;
    font-size: 16px;
  }
  .form-group textarea {
    width: 100%;
    min-height: 400px;
    padding: 16px;
    border: 2px solid var(--border);
    border-radius: 8px;
    font-size: 15px;
    line-height: 1.7;
    font-family: inherit;
    resize: vertical;
  }
  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--accent);
  }
  .form-actions {
    display: flex;
    gap: 12px;
    padding-top: 20px;
    border-top: 1px solid var(--border);
  }
  .btn {
    padding: 12px 24px;
    border-radius: 8px;
    font-weight: 500;
    font-size: 14px;
    cursor: pointer;
    border: none;
    text-decoration: none;
  }
  .btn-primary {
    background: var(--accent);
    color: white;
  }
  .btn-primary:hover {
    background: var(--accent-dark);
  }
  .btn-secondary {
    background: var(--background);
    color: var(--text);
    border: 1px solid var(--border);
  }
  .btn-success {
    background: #38a169;
    color: white;
  }
  .btn-danger {
    background: #e53e3e;
    color: white;
  }
  .message {
    padding: 12px 20px;
    border-radius: 8px;
    margin-bottom: 20px;
  }
  .message-success {
    background: #d1fae5;
    color: #065f46;
  }
  .status-badge {
    display: inline-block;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 500;
    margin-left: 10px;
  }
  .status-draft {
    background: #fef3c7;
    color: #92400e;
  }
  .status-published {
    background: #d1fae5;
    color: #065f46;
  }
  .meta-info {
    color: var(--text-light);
    font-size: 14px;
    margin-bottom: 20px;
  }
  .preview-toggle {
    margin-bottom: 20px;
  }
  .preview-content {
    background: var(--background);
    padding: 30px;
    border-radius: 8px;
    white-space: pre-line;
    line-height: 1.8;
    display: none;
  }
  .preview-content.active {
    display: block;
  }
  .edit-content.hidden {
    display: none;
  }
</style>

<div class="admin-content">
  <div class="breadcrumb">
    <a href="/admin/editorials">&larr; Back to Editorials</a>
  </div>

  <% if (message) { %>
    <div class="message message-success"><%= message %></div>
  <% } %>

  <form method="POST" action="/admin/editorial/<%= editorial.id %>" class="edit-form">
    <h2>
      Edit Editorial
      <span class="status-badge status-<%= editorial.status %>"><%= editorial.status %></span>
    </h2>

    <div class="meta-info">
      Week: <%= editorial.week_start %> to <%= editorial.week_end %>
      <% if (editorial.ai_generated_at) { %>
        &nbsp;·&nbsp; AI Generated: <%= new Date(editorial.ai_generated_at).toLocaleString() %>
      <% } %>
      <% if (editorial.published_at) { %>
        &nbsp;·&nbsp; Published: <%= new Date(editorial.published_at).toLocaleString() %>
      <% } %>
    </div>

    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" id="title" name="title" value="<%= editorial.title %>" required>
    </div>

    <div class="form-group">
      <label for="content">Content</label>
      <textarea id="content" name="content" required><%= editorial.content %></textarea>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Save Changes</button>
      <% if (editorial.status === 'draft') { %>
        <button type="submit" formaction="/admin/editorial/<%= editorial.id %>/publish" class="btn btn-success">
          Publish
        </button>
      <% } %>
      <a href="/admin/editorials" class="btn btn-secondary">Cancel</a>
      <button type="submit" formaction="/admin/editorial/<%= editorial.id %>/delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this editorial?')">
        Delete
      </button>
    </div>
  </form>
</div>

<%- include('./partials/footer') %>
